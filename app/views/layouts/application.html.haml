/ -*- coding: utf-8 -*-
!!!
%html
  %head#aiit-fb-friend-finder
    %meta{:charset => "utf-8"}
      %title= @app.name
      %link{:href => "/stylesheets/base.css", :media => "screen", :rel => "stylesheet"}
      %link{:href => "/stylesheets/main.css", :media => "screen", :rel => "stylesheet"}
      %meta{:content => "AIIT Friend Finder", :property => "og:title"}/
      %meta{:content => "app", :property => "og:type"}/
      %meta{:content => "http://aiit-fb-friend-finder.herokuapp.com/", :property => "og:url"}/
      %meta{:content => "no image", :property => "og:image"}/
      %meta{:content => "産業技術大学院大学（AIIT）に関係のある友達を検索するツールです", :property => "og:site_name"}/
      %meta{:content => @app.id, :property => "fb:app_id"}/
      :javascript
        function popup(pageURL, title,w,h) {
          var left = (screen.width/2)-(w/2);
          var top = (screen.height/2)-(h/2);
          var targetWin = window.open(
            pageURL,
            title,
            'toolbar=no, location=no, directories=no, status=no, menubar=no, scrollbars=no, resizable=no, copyhistory=no, width='+w+', height='+h+', top='+top+', left='+left
          );
        }
%body
  = yield
